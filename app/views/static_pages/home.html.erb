<h1>Search for Images on Flickr:</h1>

    <%= form_with(url: "/", local: true, method: "get") do |f| %>
    <%= f.text_field :user_id, placeholder: "User Id", required: true %> <br>
     <%= f.submit "Search" %>
    <% end %>


  <% unless @photos.size.zero? %>
      <% @photos.each do |p| %>
          <%= link_to(image_tag(Flickr.url_q(p)), Flickr.url_photopage(p)) %>
      <% end %>
  <% else %>
    <h4 >This user has no photos</h4>
  <% end %>
